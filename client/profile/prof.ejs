<html>
  <head>
    <script type='text/javascript' src="jquery.js"></script>
    <script type='text/javascript' src="prof.js"></script>
    <link href="/style.css" rel="stylesheet" type="text/css">

  </head>
  <body>
    <center>
      <form id='report'>
        <input name='winner' id='winner' placeholder='Winning User'></input>
        <input name='winScore' id='won' placeholder='Winning Score'></input>
        <input name='lostScore' id='lost' placeholder='Losing Score'></input>
        <button class='input' >Submit Loss</button>
      </form>
    </center>
    <div id='coolStuff'>
      <% if (profile) { %>
      <h1 id='name'><%= profile.firstName %>'s Stats</h1>
        <% if (profile.pinHold) { %>
          <h2 id='pin'>Congrats, You Hold the Pin!!!!</h2>
        <% } %>
      <p>
        Total Points Won: <%= profile.totalPointsWon %>
      </p>
      <p>
        Total Points Lost: <%= profile.totalPointsLost %>
      </p>
      <p>
        Total Games Won: <%= profile.gamesWon %>
      </p>
      <p>
        Total Games Lost: <%= profile.gamesLost %>
      </p>
      <p>
        Rating: <%= profile.rating %>
      </p>
      <% } %>
    </div>
    <div id='ladder'>
      <h1 id='lad'> Ladder </h1>
      <% if(all) { %>
        <ol>
          <% all.forEach(function(user) { %>
            <li>
              <h2><%= user.userName %></h2> &nbsp;&nbsp;&nbsp;Rating: <%= user.rating %>&nbsp;&nbsp; W-L:  <%= user.gamesWon %>-<%= user.gamesLost %>
              <% if(user.pinHold) { %>
                &nbsp;&nbsp;<img src='pin.jpg' />
              <% } %>
            </li>
            <br>
          <% }) %>
        </ol>
      <% } %>
    </div>
  </body>
</html>
